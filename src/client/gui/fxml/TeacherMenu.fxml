        <BorderPane fx:id="welcomeScreen" layoutX="-1.0" layoutY="-1.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <ImageView fitHeight="390.0" fitWidth="390.0" opacity="0.5" pickOnBounds="true"
